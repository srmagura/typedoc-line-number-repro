{
    "compilerOptions": {
        /* Language and Environment */
        "target": "ES2019",
        "jsx": "react-jsx",

        /* Modules */
        "module": "ESNext",
        "moduleResolution": "node",
        "resolveJsonModule": true,

        /* Emit */
        "declaration": true,
        "sourceMap": true,
        "noEmit": true,
        "noEmitOnError": true,

        /* Interop Constraints */
        "isolatedModules": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        /* Type Checking */
        "strict": true,
        "noFallthroughCasesInSwitch": true,

        /* Completeness */
        "skipLibCheck": true
    }
}
